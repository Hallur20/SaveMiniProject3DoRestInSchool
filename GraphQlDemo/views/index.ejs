    <div class="notLoggedIn">
        <div class="loginUser">
            <h1>hello from ejs :D please log in</h1>
            <form action="/login" method="post">
                <input type="text" placeholder="username" name="uName" />
                <input type="password" placeholder="password" name="psw" />
                </br>
                </br>
                <input type="submit" value="login" />
            </form>
            </br>
        </div>
        </br>
        <div class="createUser">
            <h1>or create new user</h1>
            <form action="/create" method="post">
                <input type="text" placeholder="first name" name="fName" />
                </br>
                <input type="text" placeholder="last name" name="lName" />
                </br>
                <input type="text" placeholder="user name" name="uName" />
                </br>
                <input type="password" placeholder="password" name="psw" />
                </br>
                <button id="jobsButton">+</button>
                <span>add jobs (click button to add jobs, max 3 jobs)</span>
                <div id="jobsInputs"></div>
                </br>
                <input type="submit" value="create" />
            </form>
            </br>
        </div>
    </div>
    <script>
        var jobNum = 1;
        document.getElementById("jobsButton").onclick = (e) => {
            if (jobNum != 4) {
                document.getElementById("jobsInputs").innerHTML +=
                    "<p>job number: " + jobNum + "</p>" +
                    "<input placeholder='job type' name='jobType" + jobNum + "'/></br>" +
                    "<input placeholder='job company'name='jobCompany" + jobNum + "'/></br>" +
                    "<input placeholder='job company url'name='jobCompanyUrl" + jobNum + "'/></br>";
                jobNum++;
            } e.preventDefault();
        };
    </script>
</body>

</html>